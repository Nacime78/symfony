{% extends 'layout.html.twig' %}

{% block title %}Les 3 derniers articles
{% endblock %}

{% block content %}
	<div class="row d-flex justify-content-center text-center">
		{% for article in article3 %}
			<div class="card m-2" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">
						{{ article.titre }}
					</h5>
					<h6>créé le
						{{ article.dateDeCreation|date("d/m/Y \à H\\hi") }}</h6>
					<h6>modifié le</h6>
					<h6>auteur de l'article</h6>
					<p>{{ article.contenu|slice(0, 50)}}...</p>
					<a href="#" class="btn btn-primary">Lire la suite</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

