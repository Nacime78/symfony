{% extends 'layout.html.twig' %}

{% block title %}Tous les articles
{% endblock %}

{% block content %}
<div class="row d-flex justify-content-center text-center">
	{% for allArticle in allArticle %}
	<div class="card m-2" style="width: 18rem;">
		<img src="{{ asset('imagesArticles/' ~ allArticle.image) }}" class="card-img-top" alt="...">
		<div class="card-body">
			<h5 class="card-title"> {{ allArticle.titre }} </h5>
			<h6>créé le {{ allArticle.dateDeCreation|date("d/m/Y \à H\\hi") }}</h6>
			{% if allArticle %}
			<h6>modifié le : {{ allArticle.dateDeModification|date("d/m/Y \à H\\hi") }}</h6>
			{% endif %}
			{% if allArticle.auteur %}
			<h4> auteur de l'article {{ allArticle.auteur.fullName }} </h4>
			{% else %}
			<h5>Anonyme</h5>
			{% endif %}
			<p>{{ allArticle.contenu|slice(0, 50)}}...</p>
			<a href="{{ path('app_article', { id : allArticle.id }) }}" class="btn btn-primary">Lire la suite</a>
		</div>
	</div>
	{% endfor %}	
</div>
{% endblock %}

